FROM node:20-slim

# Set working directory
WORKDIR /app

# Install dependencies for Prisma & OpenSSL
RUN apt-get update && apt-get install -y openssl bash curl && rm -rf /var/lib/apt/lists/*

# Enable corepack and install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy the rest of the app
COPY . .

# Set Prisma binary target explicitly
ENV PRISMA_CLI_BINARY_TARGETS="native,debian-openssl-3.0.x"

# Generate Prisma Client
RUN pnpm prisma generate

# Expose app port
EXPOSE 3030

# Run your app
CMD ["pnpm", "run", "dev"]
